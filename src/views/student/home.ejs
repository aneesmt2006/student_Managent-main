<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        body {
            background-color: #f0f2f5;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .student-card {
            background-color: white;
            border-radius: 20px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease-in-out;
            overflow: hidden;
        }
        .student-card:hover {
            transform: translateY(-5px);
        }
        .profile-section {
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            padding: 2rem;
            color: white;
            text-align: center;
        }
        .profile-image {
            width: 150px;
            height: 150px;
            object-fit: cover;
            border-radius: 50%;
            border: 5px solid white;
            margin-bottom: 1rem;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
        .info-card {
            background-color: #f8f9fa;
            border-radius: 15px;
            transition: all 0.3s ease-in-out;
            height: 100%;
        }
        .info-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }
        .info-icon {
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }
        .btn-custom {
            border-radius: 30px;
            padding: 0.5rem 1.5rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
        }
        .btn-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>
    <script>
        function logout() {
          Swal.fire({
            title: "Are you sure?",
            text: "Do you really want to log out !",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes",
          }).then((result) => {
            if (result.isConfirmed) {
              window.location.href = "/logout";
            }
          });
        }
      </script>
    <script>
     
        var successMessage = '<%= success_msg %>';
      var errorMessage='<%= error_msg %>'
    
        if (successMessage) {
          Swal.fire({
            toast: true,
            icon: 'success',
            title: successMessage,
            position: 'top',
            showConfirmButton: false,
            timer: 3000,
            timerProgressBar: true,
            didOpen: (toast) => {
              toast.addEventListener('mouseenter', Swal.stopTimer);
              toast.addEventListener('mouseleave', Swal.resumeTimer);
            }
          });
        }
        if (errorMessage) {
          Swal.fire({
            toast: true,
            icon: 'warning',
            title: errorMessage,
            position: 'top',
            showConfirmButton: false,
            timer: 3000,
            timerProgressBar: true,
            didOpen: (toast) => {
              toast.addEventListener('mouseenter', Swal.stopTimer);
              toast.addEventListener('mouseleave', Swal.resumeTimer);
            }
          });
        }
    </script>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="student-card">
                    <div class="profile-section mb-4">
                        <!-- <img src="/placeholder.svg?height=150&width=150" alt="Student Profile" class="profile-image"> -->
                        <h2 class="mb-0"><%= userData.name %></h2>
                        <p class="text-light mb-0">Student</p>
                    </div>
                    <div class="px-4 pb-4">
                        <div class="row g-4 mb-4">
                            <div class="col-md-6">
                                <div class="info-card p-3">
                                    <div class="text-center">
                                        <i class="fas fa-envelope info-icon text-primary"></i>
                                        <h5 class="card-title">Email</h5>
                                        <p class="card-text"><%= userData.email %></p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="info-card p-3">
                                    <div class="text-center">
                                        <i class="fas fa-graduation-cap info-icon text-success"></i>
                                        <h5 class="card-title">Class</h5>
                                        <p class="card-text"><%= userData.class %></p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="info-card p-3">
                                    <div class="text-center">
                                        <i class="fas fa-id-badge info-icon text-info"></i>
                                        <h5 class="card-title">Roll Number</h5>
                                        <p class="card-text"><%= userData.roleno %></p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="info-card p-3">
                                    <div class="text-center">
                                        <i class="fas fa-calendar-alt info-icon text-warning"></i>
                                        <h5 class="card-title">Joined</h5>
                                        <p class="card-text"><%= new Date(userData.createdAt).toLocaleDateString() %></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-center">
                            <a href="/edituser" class="btn btn-primary btn-custom me-3">
                                <i class="fas fa-user-edit me-2"></i>Edit Details
                            </a>
                            <a  onclick="logout()"class="btn btn-danger btn-custom">
                                <i class="fas fa-sign-out-alt me-2"></i>Logout
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

